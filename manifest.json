{
  "manifest_version": 3,
  "name": "得到文章定位器",
  "version": "1.0",
  "description": "自动定位得到专栏当前阅读文章在侧边栏的位置",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.dedao.cn/*"
  ],
  "action": {
    "default_title": "定位当前文章",
    "default_icon": {
      "16": "icons/dedao.png",
      "48": "icons/dedao.png",
      "128": "icons/dedao.png"
    }
  },
  "icons": {
    "16": "icons/dedao.png",
    "48": "icons/dedao.png",
    "128": "icons/dedao.png"
  },
  "content_scripts": [{
    "matches": ["https://www.dedao.cn/*"],
    "js": ["content.js"]
  }]
}